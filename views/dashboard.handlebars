<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>

<div class="row mt-4">

    {{#if posts.length}}
    <div class="col-md-6 project-list">
        <h3 class="">Current Projects:</h3>

        {{#each posts as |post|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/api/projects/{{post.id}}">{{post.title}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}

    <div class="col-md-10">
        <button class="btn btn-primary create-post">Create New Post</button>




    </div>

    <script src="/js/profile.js"></script>